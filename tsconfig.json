{
    "compilerOptions": {
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "declaration": true,
      "baseUrl": "./src",
      "rootDir": "./src",
      "outDir": "dist",
      "allowJs": false,
      "esModuleInterop": true,
      "target": "es5",
      "module": "commonjs",
      "resolveJsonModule": true,
      "lib": ["es2019", "esnext.asynciterable"],
      "preserveSymlinks": true,
      "paths": {
        "@/*": ["./*"]
      }
    },
    "include": [
      "src/**/*",
      "config/**/*"
    ],
    "exclude": [
      "node_modules",
      "src/**/*.spec.ts"
    ]
  }